---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { getPath } from '../../../utils/pathUtils';

// Get people content
const peopleContent = await getCollection('inspirations', ({ data }) => {
    return data.category === 'people' && (data.status === 'published' || data.status === 'canonical');
});

// Sort by date, most recent first
const sortedContent = peopleContent.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Format date
const formatDate = (date) => {
    return new Intl.DateTimeFormat('en-US', { month: 'long', year: 'numeric' }).format(date);
};
---

<BaseLayout title="Influential People - Padmanand Warrier" currentPage="inspirations">
    <div class="page-container">
        
        <h1>Influential People</h1>
        
        <p class="section-intro">
            World leaders who navigated uncertainty with clarity, technology pioneers who imagined possibilities before the tools existed, mentors who expanded my understanding of leadership, and thinkers who continue to challenge how I see the world.
        </p>

        {sortedContent.length > 0 ? (
            <ul class="content-list">
                {sortedContent.map((item) => (
                    <li class="content-item">
                        <h3 class="content-item-title">
                            <a href={getPath(`/inspirations/people/${item.slug}`)}>{item.data.title}</a>
                        </h3>
                        <div class="metadata">
                            <span class="metadata-item">
                                <span class="metadata-label">{item.data.type.charAt(0).toUpperCase() + item.data.type.slice(1)}</span>
                            </span>
                            <span class="metadata-item">Published {formatDate(item.data.date)}</span>
                            {item.data.themes && item.data.themes.length > 0 && (
                                <span class="metadata-item">
                                    Themes: {item.data.themes.join(', ')}
                                </span>
                            )}
                        </div>
                        <p class="content-item-summary">{item.data.summary}</p>
                    </li>
                ))}
            </ul>
        ) : (
            <p>Content coming soon.</p>
        )}

    </div>
</BaseLayout>
