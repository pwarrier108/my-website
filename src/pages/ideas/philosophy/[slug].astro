---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
    // Get all content types for philosophy category
    const essays = await getCollection('essays', ({ data }) => data.category === 'philosophy');
    const cases = await getCollection('cases', ({ data }) => data.category === 'philosophy');
    const reflections = await getCollection('reflections', ({ data }) => data.category === 'philosophy');
    const blog = await getCollection('blog', ({ data }) => data.category === 'philosophy');
    
    const allContent = [...essays, ...cases, ...reflections, ...blog];
    
    return allContent.map(entry => ({
        params: { slug: entry.slug },
        props: { entry }
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Format date
const formatDate = (date) => {
    return new Intl.DateTimeFormat('en-US', { month: 'long', year: 'numeric' }).format(date);
};
---

<BaseLayout title={`${entry.data.title} - Padmanand Warrier`} currentPage="ideas">
    <div class="page-container">
        <h1>{entry.data.title}</h1>
        
        <div class="metadata">
            <span class="metadata-item">
                <span class="metadata-label">{entry.data.type.charAt(0).toUpperCase() + entry.data.type.slice(1)}</span>
            </span>
            <span class="metadata-item">Published {formatDate(entry.data.date)}</span>
            {entry.data.era && (
                <span class="metadata-item"> · Era: {entry.data.era}</span>
            )}
            {entry.data.themes && entry.data.themes.length > 0 && (
                <span class="metadata-item">
                     · Themes: {entry.data.themes.join(', ')}
                </span>
            )}
        </div>

        <div class="content">
            <Content />
        </div>
    </div>
</BaseLayout>