---
const { title } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>

  <body>
    <nav>
      <a href={base}>Home</a> |
      <a href={`${base}/work`}>Work</a> |
      <a href={`${base}/writing`}>Writing</a> |
      <a href={`${base}/service`}>Service</a> |
      <a href={`${base}/values`}>Values</a> |
      <a href={`${base}/reflections`}>Reflections</a> |
      <a href={`${base}/blog`}>Blog</a>
    </nav>

    <main>
      <slot />
    </main>
  </body>
</html>
